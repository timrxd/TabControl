{

  "manifest_version": 2,
  "name": "TabControl",
  "version": "1.0",

  "description": "Select all tabs and perform operations on them",

  "icons": {
    "48": "icons/control-48.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "commands": {
    "toggle-audio": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Send a 'toggle-audio' event"
    },
    "focus-audio": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Send a 'focus-audio' event"
    },
    "toggle-all-audio": {
      "suggested_key": {
        "default": "Alt+3"
      },
      "description": "Send a 'toggle-all-audio' event"
    }
  },

  "background": {
    "scripts": ["tabcontrol.js"]
  }

}
